## export PYTHONPATH=/usr/lib/python36.zip:/usr/lib/python3.6:/usr/lib/python3.6/lib-dynload:/usr/local/lib/python3.6/dist-packages:/home/irsl/.local/lib/python3.6/site-packages:/usr/lib/python3/dist-packages
